{
  "compilerOptions": {
    // ========================================
    // üíæ Sa√≠da e cache
    // ========================================
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    // ========================================
    // üéØ Target e bibliotecas
    // ========================================
    "target": "ES2022", // atualizado p/ melhor suporte async/await e classes modernas
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"], // üëà garante APIs web (Clipboard, Canvas, etc.)

    // ========================================
    // üì¶ M√≥dulos e empacotamento
    // ========================================
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    // ========================================
    // ‚öôÔ∏è Compatibilidade e interoperabilidade
    // ========================================
    "esModuleInterop": true, // necess√°rio p/ libs CommonJS (ex: jspdf, html2canvas)
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["vite/client"], // inclui typings do Vite

    // ========================================
    // üßπ Regras de lint e seguran√ßa
    // ========================================
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true // mant√©m compatibilidade com libs JS externas
  },
  "include": ["src"]
}
